<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Informations">

    <TextView
        android:id="@+id/information_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Team"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/information_imageview_niklas"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="42dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/information_header"
        app:srcCompat="@drawable/niklas_gucken" />

    <ImageView
        android:id="@+id/information_imageview_haris"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="42dp"
        app:layout_constraintStart_toStartOf="@+id/information_imageview_niklas"
        app:layout_constraintTop_toBottomOf="@+id/information_imageview_niklas"
        app:srcCompat="@drawable/haris_rambo" />

    <TextView
        android:id="@+id/information_textview_niklas_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Niklas Gottlieb Zimmermann"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/information_imageview_niklas"
        app:layout_constraintTop_toTopOf="@+id/information_imageview_niklas" />

    <TextView
        android:id="@+id/information_textview_haris_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Haris Kekic"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/information_imageview_haris"
        app:layout_constraintTop_toTopOf="@+id/information_imageview_haris" />

    <TextView
        android:id="@+id/information_textview_niklas_discription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="-Linux-Enthusiast\n-Harrisons Pain\n-Chicken-King\n-Official Watchman"
        app:layout_constraintStart_toStartOf="@+id/information_textview_niklas_name"
        app:layout_constraintTop_toBottomOf="@+id/information_textview_niklas_name" />

    <TextView
        android:id="@+id/information_textview_haris_discription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="-Official Try-Hard\n-Niklases Pain\n-King of Dumplings\n-Beautiful Hair"
        app:layout_constraintStart_toStartOf="@+id/information_textview_haris_name"
        app:layout_constraintTop_toBottomOf="@+id/information_textview_haris_name" />

    <TextView
        android:id="@+id/information_textview_homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="www.handsome.at"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/information_imageview_haris" />
</androidx.constraintlayout.widget.ConstraintLayout>